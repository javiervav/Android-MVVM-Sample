<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.mvvmsample.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.android.mvvmsample.presentation.books.BooksFragment"
        android:label="BooksFragment"
        tools:layout="@layout/fragment_books" />

    <!-- Action to navigate from search bottom sheet to search fragment -->
    <action
        android:id="@+id/actionGlobalSearchFragment"
        app:destination="@id/searchFragment">
        <argument
            android:name="searchTypeArg"
            app:argType="com.android.mvvmsample.presentation.search.SearchType" />
    </action>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.android.mvvmsample.presentation.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/musicFragment"
        android:name="com.android.mvvmsample.presentation.music.MusicFragment"
        android:label="MusicFragment"
        tools:layout="@layout/fragment_music" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.android.mvvmsample.presentation.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

</navigation>
