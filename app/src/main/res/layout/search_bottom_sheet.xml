<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchBottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet_header"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/bottomSheetFirstOption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_option_height"
        android:gravity="center"
        android:text="@string/search_first_option"
        app:layout_constraintBottom_toTopOf="@id/bottomSheetSecondOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomSheetSecondOption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_option_height"
        android:gravity="center"
        android:text="@string/search_second_option"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetFirstOption" />

</androidx.constraintlayout.widget.ConstraintLayout>
