<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchBottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryBright">

    <TextView
        android:id="@+id/bottomSheetOption1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_option_height"
        android:gravity="center"
        android:text="Opcion 1"
        app:layout_constraintBottom_toTopOf="@id/bottomSheetOption2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomSheetOption2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_option_height"
        android:gravity="center"
        android:text="Opcion 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomSheetOption1" />

</androidx.constraintlayout.widget.ConstraintLayout>
