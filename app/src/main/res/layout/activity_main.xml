<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainFragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/mainBottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph" />

    <LinearLayout
        android:id="@+id/searchBottomSheetLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_sheet_header"
        android:orientation="vertical"
        android:paddingTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainBottomNavigationView">

        <TextView
            android:id="@+id/bottomSheetFirstOption"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_option_height"
            android:gravity="center"
            android:text="@string/search_first_option"
            app:layout_constraintBottom_toTopOf="@id/bottomSheetSecondOption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/bottomSheetSecondOption"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_option_height"
            android:gravity="center"
            android:text="@string/search_second_option"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomSheetFirstOption" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainBottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/bottom_nav_item_color"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainFragmentContainerView"
        app:menu="@menu/bottom_navigation_menu" />

    <ImageView
        android:id="@+id/menuSearchButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/background_bottom_search_button"
        android:elevation="8dp"
        android:padding="10dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toTopOf="@id/mainBottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainBottomNavigationView"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
